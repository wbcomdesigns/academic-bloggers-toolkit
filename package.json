{
  "name": "academic-bloggers-toolkit",
  "version": "1.0.0",
  "description": "Complete academic citation management system for WordPress",
  "main": "webpack.config.js",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development",
    "watch": "webpack --mode=development --watch",
    "build:css": "sass admin/css/src:admin/css/dist public/css/src:public/css/dist --style=compressed",
    "watch:css": "sass admin/css/src:admin/css/dist public/css/src:public/css/dist --style=expanded --watch",
    "build:js": "webpack --mode=production --config webpack.config.js",
    "watch:js": "webpack --mode=development --watch --config webpack.config.js",
    "lint:js": "eslint admin/js/src public/js/src --ext .js",
    "lint:js:fix": "eslint admin/js/src public/js/src --ext .js --fix",
    "lint:css": "stylelint admin/css/src/**/*.scss public/css/src/**/*.scss",
    "lint:css:fix": "stylelint admin/css/src/**/*.scss public/css/src/**/*.scss --fix",
    "format": "prettier --write admin/js/src/**/*.js public/js/src/**/*.js",
    "test:js": "jest",
    "test:js:watch": "jest --watch",
    "validate": "npm run lint:js && npm run lint:css && npm run test:js",
    "clean": "rm -rf admin/js/dist/* admin/css/dist/* public/js/dist/* public/css/dist/*",
    "zip": "npm run build && zip -r academic-bloggers-toolkit.zip . -x 'node_modules/*' '.git/*' 'tests/*' 'admin/js/src/*' 'admin/css/src/*' 'public/js/src/*' 'public/css/src/*' '*.log' '.env*'"
  },
  "keywords": [
    "wordpress",
    "plugin",
    "academic",
    "citations",
    "bibliography",
    "research",
    "scholarly",
    "footnotes",
    "doi",
    "pubmed"
  ],
  "author": "Academic Blogger's Toolkit Team",
  "license": "GPL-2.0-or-later",
  "homepage": "https://academic-bloggers-toolkit.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/academic-bloggers-toolkit/academic-bloggers-toolkit.git"
  },
  "bugs": {
    "url": "https://github.com/academic-bloggers-toolkit/academic-bloggers-toolkit/issues"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "@wordpress/eslint-plugin": "^14.0.0",
    "babel-loader": "^9.1.0",
    "css-loader": "^6.8.0",
    "eslint": "^8.42.0",
    "eslint-config-wordpress": "^2.0.0",
    "jest": "^29.5.0",
    "mini-css-extract-plugin": "^2.7.0",
    "prettier": "^2.8.0",
    "sass": "^1.63.0",
    "sass-loader": "^13.3.0",
    "stylelint": "^15.6.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "webpack": "^5.85.0",
    "webpack-cli": "^5.1.0"
  },
  "dependencies": {
    "axios": "^1.4.0",
    "lodash": "^4.17.21",
    "select2": "^4.1.0",
    "sortablejs": "^1.15.0",
    "tippy.js": "^6.3.0"
  },
  "browserslist": [
    "extends @wordpress/browserslist-config"
  ],
  "eslintConfig": {
    "extends": [
      "@wordpress/eslint-plugin/recommended"
    ],
    "env": {
      "browser": true,
      "jquery": true
    },
    "globals": {
      "wp": "readonly",
      "abt_admin_ajax": "readonly",
      "abt_frontend_ajax": "readonly",
      "jQuery": "readonly"
    }
  },
  "stylelint": {
    "extends": [
      "stylelint-config-standard-scss"
    ],
    "rules": {
      "selector-class-pattern": "^abt-[a-z0-9-]+$",
      "selector-id-pattern": "^abt-[a-z0-9-]+$"
    }
  },
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/js/setup.js"
    ],
    "testMatch": [
      "<rootDir>/tests/js/**/*.test.js"
    ],
    "collectCoverageFrom": [
      "admin/js/src/**/*.js",
      "public/js/src/**/*.js"
    ]
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  }
}